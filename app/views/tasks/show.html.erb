<h1><%= @task[:title] %></h1>
<h3><%= @task[:details] %></h3>
<% if @task.completed? %>
    <input type="checkbox" checked value="task[:title]">
  <% else %>
    <input type="checkbox" value="task[:title]"><br>
<% end %>
<%= link_to 'Edit this task', edit_path %>
<%= link_to 'Destroy this task', destroy_path, method: "delete" %>
